	<Frame name="TRP3_NPCTalkFrame" inherits="TRP3_HoveredFrame" parent="UIParent" hidden="true" enableMouse="true">
		<Size x="275" y="150"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTitle" text="[NPC_TALK]" inherits="GameFontNormal" justifyH="LEFT">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="35" y="-15"/>
						<Anchor point="TOPRIGHT" x="-30" y="-15"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>

			<EditBox name="$parentName" inherits="TRP3_TitledHelpEditBox">
				<Size x="120" y="18"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="-10" y="-10" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT"/>
					<Anchor point="RIGHT" x="-25" y="0"/>
				</Anchors>
			</EditBox>
			<Button name="$parentApply" inherits="TRP3_CommonButton">
				<Size x="100" y="20"/>
				<Anchors>
					<Anchor point="BOTTOM" x="0" y="10"/>
				</Anchors>
			</Button>
			<Frame name="$parentText" inherits="TRP3_TextArea">
				<Anchors>
					<Anchor point="TOP" x="0" y="-5" relativePoint="BOTTOM" relativeTo="$parentName"/>
					<Anchor point="BOTTOM" relativePoint="TOP" relativeTo="$parentApply" x="0" y="2"/>
					<Anchor point="RIGHT" x="-10" y="0"/>
					<Anchor point="LEFT" x="10" y="0"/>
				</Anchors>
			</Frame>


			<Button inherits="UIPanelCloseButton" parentKey="CloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="0" y="0"/>
				</Anchors>
				<Scripts>
					<OnClick>
						self:GetParent():Hide();
					</OnClick>
					<PostClick>
						TRP3_API.ui.misc.playUISound("gsCharacterSelection");
					</PostClick>
				</Scripts>
			</Button>

			<Button name="TRP3_NPCTalkFrameResize" inherits="TRP3_ResizeButton">
				<KeyValues>
					<KeyValue key="resizableFrame" value="TRP3_NPCTalkFrame" type="global"/>
					<KeyValue key="minWidth" value="275" type="number"/>
					<KeyValue key="minHeight" value="150" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
				</Anchors>
			</Button>

		</Frames>

		<Scripts>
			<OnUpdate>
				if MouseIsOver(self) or MouseIsOver(TRP3_Toolbar) then
					self:SetAlpha(1.0);
				else
					self:SetAlpha(0.5);
				end
			</OnUpdate>
		</Scripts>
	</Frame>

	<Script file="npctalk.lua" />

</Ui>