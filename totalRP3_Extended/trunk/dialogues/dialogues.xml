	<!-- *_*_*_*_*_*_*_*_*_*  -->
	<!--      DIALOGUES       -->
	<!-- *_*_*_*_*_*_*_*_*_*  -->

	<Frame name="TRP3_DialogFrame" inherits="TRP3_StandardParchmentFrame" toplevel="true" parent="UIParent" frameStrata="MEDIUM" enableMouse="true" clampedToScreen="true" hidden="true" movable="true">
		<TitleRegion setAllPoints="true"/>

		<Layers>
			<Layer level="BORDER">
				<Texture parentKey="BG" file="Interface\DRESSUPFRAME\DressUpBackground-NightElf1" alpha="0.5">
					<Anchors>
						<Anchor point="TOPLEFT" x="20" y="-20"/>
						<Anchor point="BOTTOMRIGHT" x="-20" y="20"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>

		<Frames>

			<Frame parentKey="Models" frameStrata="MEDIUM">
				<Size x="0" y="0"/>
				<Anchors>
					<Anchor point="TOP" x="0" y="-20"/>
					<Anchor point="BOTTOM" x="0" y="20"/>
					<Anchor point="LEFT" x="20" y="0"/>
					<Anchor point="RIGHT" x="-20" y="0"/>
				</Anchors>
				<Frames>
					<Frame parentKey="Point">
						<Size x="10" y="10"/>
						<Anchors>
							<Anchor point="CENTER" x="0" y="0"/>
						</Anchors>
					</Frame>
					<CinematicModel parentKey="Me" setAllPoints="true">
						<Frames>
							<Button parentKey="ScrollZone" enableMouse="true">
								<Anchors>
									<Anchor point="TOP" x="0" y="-50"/>
									<Anchor point="LEFT" x="75" y="0"/>
									<Anchor point="BOTTOM" x="0" y="50"/>
									<Anchor point="RIGHT" relativePoint="CENTER" relativeKey="$parent.Point" x="-75" y="0"/>
								</Anchors>
							</Button>
						</Frames>
					</CinematicModel>
					<CinematicModel parentKey="You" setAllPoints="true">
						<Frames>
							<Button parentKey="ScrollZone" enableMouse="true">
								<Anchors>
									<Anchor point="TOP" x="0" y="-50"/>
									<Anchor point="RIGHT" x="-75" y="0"/>
									<Anchor point="BOTTOM" x="0" y="50"/>
									<Anchor point="LEFT" relativePoint="CENTER" relativeKey="$parent.Point" x="75" y="0"/>
								</Anchors>
							</Button>
						</Frames>
					</CinematicModel>
				</Frames>
			</Frame>

			<Frame parentKey="Chat" frameStrata="HIGH">
				<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
					<EdgeSize>
						<AbsValue val="16"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="16"/>
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="3" right="3" top="3" bottom="3"/>
					</BackgroundInsets>
				</Backdrop>
				<Size x="0" y="150"/>
				<Anchors>
					<Anchor point="BOTTOM" x="0" y="25"/>
					<Anchor point="LEFT" x="30" y="0"/>
					<Anchor point="RIGHT" x="-30" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture file="Interface\Tooltips\CHATBUBBLE-TAIL">
							<Size x="32" y="32"/>
							<Anchors>
								<Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" x="-40" y="-3"/>
							</Anchors>
							<TexCoords left="1" right="0" top="1" bottom="0"/>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<FontString parentKey="Name" text="[NAME]" inherits="GameFontNormalLarge" justifyH="RIGHT" justifyV="TOP">
							<Anchors>
								<Anchor point="TOPLEFT" x="50" y="-12"/>
								<Anchor point="TOPRIGHT" x="-50" y="-12"/>
							</Anchors>
							<Color r="1" g="0.75" b="0.0"/>
						</FontString>
						<FontString parentKey="Text" text="[TEXT]" inherits="GameFontNormalLarge" justifyH="LEFT" justifyV="TOP">
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent.Name" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
							</Anchors>
							<Color r="1" g="1" b="0.4"/>
						</FontString>
						<FontString parentKey="Next" text="[NEXT]" inherits="GameFontNormalSmall" justifyH="RIGHT" justifyV="BOTTOM">
							<Anchors>
								<Anchor point="BOTTOM" x="0" y="17"/>
							</Anchors>
							<Color r="1" g="1" b="0.4"/>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<Frame name="$parentHighLight" parentKey="HighLight" inherits="GlowBorderTemplate" hidden="true">
						<Anchors>
							<Anchor point="TOPLEFT" x="5" y="-2"/>
							<Anchor point="BOTTOMRIGHT" x="-3" y="0"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								self:SetAlpha(0.15);
							</OnLoad>
						</Scripts>
					</Frame>
					<Button parentKey="NextButton" inherits="TRP3_InvisibleButton" setAllPoints="true" frameLevel="4">
						<Scripts>
							<OnEnter>
								TRP3_DialogFrame.Chat.HighLight:Show();
							</OnEnter>
							<OnLeave>
								TRP3_DialogFrame.Chat.HighLight:Hide();
							</OnLeave>
						</Scripts>
					</Button>
					<Button parentKey="PreviousButton" frameLevel="5">
						<Size x="35" y="35"/>
						<Anchors>
							<Anchor point="BOTTOMRIGHT" x="-5" y="5"/>
						</Anchors>
						<NormalTexture file="Interface\Buttons\UI-RotationLeft-Button-Up" />
						<PushedTexture file="Interface\Buttons\UI-RotationLeft-Button-Down"/>
						<HighlightTexture file="Interface\Buttons\ButtonHilight-Round" alphaMode="ADD"/>
					</Button>
				</Frames>
			</Frame>

			<!--         -->
			<!-- BUTTONS -->
			<!--         -->

			<Button parentKey="Close" inherits="UIPanelCloseButton" frameStrata="HIGH">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-5" y="-10"/>
				</Anchors>
			</Button>

			<Button parentKey="Resize" inherits="TRP3_ResizeButton" frameStrata="HIGH" hidden="false">
				<KeyValues>
					<KeyValue key="resizableFrame" value="TRP3_DialogFrame" type="global"/>
					<KeyValue key="minWidth" value="700" type="number"/>
					<KeyValue key="minHeight" value="450" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" x="-5" y="10"/>
				</Anchors>
			</Button>

		</Frames>

	</Frame>


	<Script file="animations.lua"/>
	<Script file="dialogues.lua"/>

</Ui>