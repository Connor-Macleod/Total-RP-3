		<Size x="530" y="0"/>
        <Anchors>
			<Anchor point="TOPRIGHT" x="0" y="0"/>
			<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
		</Anchors>
        <Layers>
        	<Layer level="BACKGROUND">
				<Texture file="Interface\AchievementFrame\UI-Achievement-StatsBackground">
					<Size x="526" y="0"/>
					<Anchors>
						<Anchor point="TOPRIGHT" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
					<TexCoords left="0.07" right="1" top="0" bottom="0.98"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
			    <FontString name="TRP3_ConfigurationModuleTitle" inherits="GameFontNormalHuge" justifyH="CENTER" text="[modules_settings]">
					<Anchors>
						<Anchor point="TOPLEFT" x="50" y="-25"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
		    <Frame>
		        <Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
					<EdgeSize><AbsValue val="32"/></EdgeSize><TileSize><AbsValue val="418"/></TileSize>
					<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
				</Backdrop>
				<Size x="450" y="380"/>
		         <Anchors>
					<Anchor point="BOTTOM" x="0" y="20"/>
				</Anchors>
				<Frames>
				    <ScrollFrame name="TRP3_ConfigurationModuleScroll" inherits="UIPanelScrollFrameTemplate">
						<Size x="420" y="365"/>
						<Anchors>
							<Anchor point="RIGHT" x="-17" y="0"/>
						</Anchors>
						<ScrollChild>
							<Frame name="TRP3_ConfigurationModuleContainer">
								<Size x="50" y="50"/>
								<Frames>
								    
								</Frames>
							</Frame>
						</ScrollChild>
					</ScrollFrame>
				</Frames>
		    </Frame>
		</Frames>
    </Frame>
    
</Ui>