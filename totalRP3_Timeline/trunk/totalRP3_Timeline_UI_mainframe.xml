<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

	<!--  WoWLeaks -->
	<!--  MAIN FRAME -->
	<Frame name="TRP3tl" toplevel="true" movable="true" parent="UIParent" enableMouse="true" hidden="false">
		 <Size><AbsDimension x="680" y="440"/></Size>
		 <Anchors>
			<Anchor point="center" x="0" y="50"/>
		</Anchors>
		<Script File="TotalRP3_Timeline.lua"/>
		<Scripts>
    		<OnLoad>
     			TRP3tl_main_loading();
     			self:RegisterForDrag("LeftButton");
    		</OnLoad>
  			<OnDragStart>
  				self:StartMoving();
  			</OnDragStart>
  			<OnDragStop>
  				self:StopMovingOrSizing();
  			</OnDragStop>
   		</Scripts>
		<Layers>
			<!-- Fondos - level 0-->
			<Layer level="BACKGROUND">
				<Texture name="TRP3tl_clock" file="Interface\Icons\Spell_Holy_BorrowedTime">
					<Size x="64" y="64"/>
					<Anchors>
						<Anchor point="topleft" x="8" y="-8"/>
					</Anchors>
				</Texture>
			</Layer>
			
			<!-- Bordes - level 1 -->
			<Layer level="BORDER">
				<Texture name="TRP3tl_PanelBG">
					<Size x="58" y="58"/>
					<Anchors>
						<Anchor point="bottomleft" x="0" y="15"/>
					</Anchors>
				</Texture>
				<Texture file="Interface\QuestFrame\UI-QuestLogDualPane-Left">
					<Size x="512" y="512"/>
					<Anchors>
						<Anchor point="topleft" x="0" y="0"/>
					</Anchors>
				</Texture>
				<Texture file="Interface\QuestFrame\UI-QuestLogDualPane-Right">
					<Size x="256" y="512"/>
					<Anchors>
						<Anchor point="topleft" x="512" y="0"/>	
					</Anchors>
				</Texture>
			</Layer>
			
			<!-- Arte - level 2 -->
			<Layer level="ARTWORK">
				<FontString name="$parent_mainTitle" font="Fonts\FRIZQT__.TTF" text="TotalRP3 Timeline" justifyH="LEFT" justifyV="TOP">
					<Color r="1" g="1" b="0.6" a="1"/>
					<FontHeight val="16"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parent" x="82" y="-17" />
					</Anchors>
					<Shadow>
						<Offset x="1" y="1" />
						<Color r="0" g="0" b="0"/>
					</Shadow>
				</FontString>
			</Layer>
			<!-- Overlay - level 3 -->
			<Layer level="OVERLAY">				
				<FontString name="TRP3tl_yearLabel" font="Fonts\FRIZQT__.TTF" text="" justifyH="right" justifyV="TOP">
					<Color r="1" g="1" b="1" a="1"/>
					<FontHeight val="20"/>
					<Anchors>
						<Anchor point="TOPRIGHT" x="-32" y="-42" />
					</Anchors>
					<Shadow>
						<Offset x="1" y="1" />
						<Color r="0" g="0" b="0"/>
					</Shadow>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="wl_nav1" inherits="UIPanelButtonTemplate" text="1">
				<Size>
	                <AbsDimension x="20" y="25"/>
	            </Size>
				<Anchors>
					<Anchor point="TOPRIGHT" x="-300" y="-62"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self:Hide()
					</OnLoad>
					<OnClick>
						setNavigationNumTimeline(self:GetText());
					</OnClick>
				</Scripts>
			</Button>
			<Button name="wl_nav2" inherits="UIPanelButtonTemplate" text="2">
				<Size>
	                <AbsDimension x="20" y="25"/>
	            </Size>
				<Anchors>
					<Anchor relativeto="wl_nav1" x="21" y="0"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self:Hide()
					</OnLoad>
					<OnClick>
						setNavigationNumTimeline(self:GetText());
					</OnClick>
				</Scripts>
			</Button>
			<Button name="wl_nav3" inherits="UIPanelButtonTemplate" text="3">
				<Size>
	                <AbsDimension x="20" y="25"/>
	            </Size>
				<Anchors>
					<Anchor relativeto="wl_nav2" x="21" y="0"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self:Hide()
					</OnLoad>
					<OnClick>
						print("3");
					</OnClick>
				</Scripts>
			</Button>
			<Button name="TRP3tl_SearchButton" inherits="UIPanelButtonTemplate" text="Categories">
	            <Size>
	                <AbsDimension x="120" y="20"/>
	            </Size>
	            <Anchors>
	                <Anchor point="TOPLEFT">
	                    <Offset x="70" y="-40"/>
	                </Anchor>
	            </Anchors>
	            <Scripts>
	                <OnClick>
	                	ToggleDropDownMenu(1, nil, TRP3tl_CategoriesDropMenu, self:GetName(), 0, 0)

	                </OnClick>
	            </Scripts>
	        </Button>
			<Button name="TRP3tl_mylore" inherits="UIPanelButtonTemplate" text="My Lore">
				<Size>
	                <AbsDimension x="120" y="20"/>
	            </Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeto="WowLeaks_SearchButton" x="124" y="0"/>
				</Anchors>
				<Scripts>
					<OnClick>
						print("1");
					</OnClick>
				</Scripts>
			</Button>
			<Button name="wl_closebig" inherits="UIPanelButtonTemplate" text="Cerrar">
				<Size>
	                <AbsDimension x="80" y="20"/>
	            </Size>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" x="-4" y="7"/>
				</Anchors>
				<Scripts>
					<OnClick>
						self:GetParent():Hide();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="resettimeline" inherits="UIPanelButtonTemplate" text="Restablecer">
				<Size>
	                <AbsDimension x="110" y="22"/>
	            </Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="18" y="7"/>
				</Anchors>
				<Scripts>
					<OnClick>
						print("Restableciendo linea temporal")
					</OnClick>
				</Scripts>
			</Button>
			<Button inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="4" y="-8"/>
				</Anchors>
				<Scripts>
					<OnClick>
						self:GetParent():Hide();
					</OnClick>
				</Scripts>
			</Button>
			<ScrollFrame name="$parentYearsScroll" >
				<Size x="302" y="337"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="22" y="-74n"/>
                </Anchors>
                
				<Layers>
                    <Layer level="BACKGROUND">
                        <Texture name="$parentTop" file="Interface\PaperDollInfoFrame\UI-Character-ScrollBar">
                            <Size x="29" y="102"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="-6" y="5"/>
                            </Anchors>
                            <TexCoords left="0" right="0.445" top="0" bottom="0.4"/>
                        </Texture>
                        <Texture name="$parentBottom" file="Interface\PaperDollInfoFrame\UI-Character-ScrollBar">
                            <Size x="29" y="106"/>
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="-6" y="-2"/>
                            </Anchors>
                            <TexCoords left="0.515625" right="0.960625" top="0" bottom="0.4140625"/>
                        </Texture>
                        <Texture name="$parentMiddle" file="Interface\PaperDollInfoFrame\UI-Character-ScrollBar">
                            <Size x="29" y="1"/>
                            <Anchors>
                                <Anchor point="TOP" relativeTo="$parentTop" relativePoint="BOTTOM"/>
                                <Anchor point="BOTTOM" relativeTo="$parentBottom" relativePoint="TOP"/>
                            </Anchors>
                            <TexCoords left="0" right="0.445" top=".75" bottom="1.0"/>
                        </Texture>
                    </Layer>
                </Layers>
                <Frames>
                    <Slider name="$parentScrollBar" inherits="HybridScrollBarTemplate" parentKey="scrollBar">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="0" y="-15"/>
                            <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="0" y="14"/>
                        </Anchors>
                        <Scripts>
				            <OnLoad>
				                TRP3tl_YearsScrollBar_OnLoad(self);
				            </OnLoad>
				            <OnValueChanged>
				            	TRP3tl_YearsScrollBar_OnValueChanged(self);
				            	--print(self:GetValue())
				            </OnValueChanged>
				            
				        </Scripts>
                    </Slider>
                    <Frame name="$parentHighlightFrame" hidden="true">
                        <Anchors>
                            <Anchor point="TOPLEFT"/>
                            <Anchor point="BOTTOMRIGHT"/>
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
                                <Texture name="QuestLogSkillHighlight" file="Interface\QuestFrame\UI-QuestLogTitleHighlight" alphaMode="ADD"/>
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnLoad>
                                self:SetParent(nil);
                            </OnLoad>
                        </Scripts>
                    </Frame>
                 </Frames>
                 <ScrollChild >
			 		<Frame name="$parentFrame">
				 		<Size>
				 			<AbsDimension x="200" y="300" />
				 		</Size>
				        <Scripts>
				            <OnLoad>
				                TRP3tl_ScrollChildFrame_OnLoad(self);
				            </OnLoad>
				        </Scripts>
				    </Frame>
				</ScrollChild>
				<Scripts>
                    <OnLoad function="YearLog_OnLoad"/>
                    <OnMouseWheel>

		                HybridScrollFrame_OnMouseWheel(self, delta);
		            </OnMouseWheel>
                </Scripts>
                
			</ScrollFrame>
			<ScrollFrame name="TRP3tl_contentScroll" inherits="UIPanelScrollFrameTemplate">
				<Size x="290" y="337"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="360" y="-73"/>
				</Anchors>
				<ScrollChild>
					<Frame>
						<Size x="10" y="300"/>
						<Frames>
							<SimpleHTML name="TRP3tl_contentframe">
								<Size x="275" y="260"/>
								<Anchors>
									<Anchor point="TOPLEFT" x="0" y="-10"/>
								</Anchors>
								<FontString name="WL_font_fritz" font="Fonts\FRIZQT__.TTF" text="Example Text" justifyH="LEFT" justifyV="TOP">
									<Color r="0.1" g="0" b="0" a="1"/>
									<FontHeight val="12"/>
									<Anchors>
										<Anchor point="TOPLEFT" relativeTo="$parent" x="20" y="-20" />
									</Anchors>
								</FontString>
								<FontStringHeader1 name="WL_font_morpheus" font="Fonts\MORPHEUS.TTF" text="Example Text" justifyH="LEFT" justifyV="TOP">
									<Color r="0.5" g="0.5" b="0.1" a="1"/>
									<FontHeight val="17"/>
									<Anchors>
										<Anchor point="TOPLEFT" relativeTo="$parent" x="20" y="-20" />
									</Anchors>
									<Shadow>
									<Offset x="1" y="-1" />
									<Color r="0" g="0" b="0"/>
									</Shadow>
								</FontStringHeader1>	
							</SimpleHTML>
						</Frames>
					</Frame>
				</ScrollChild>
			</ScrollFrame>
		</Frames>
   </Frame>
	
</Ui>