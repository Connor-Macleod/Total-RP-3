<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\UI.xsd">
	
	<!-- Target frame button -->
	<Button name="TRP3_TargetFrameButton" virtual="true">
		<Size x="30" y="30" />
		<NormalTexture name="$parentNormal" />
		<HighlightTexture alphaMode="ADD" file="Interface/BUTTONS/ButtonHilight-Square"/>
		<Layers>
			<Layer level="OVERLAY">
				<Texture name="$parentAlert">
					<Size x="15" y="15" />
					<Anchors>
						<Anchor point="BOTTOMLEFT" x="0" y="0" />
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Button>

	<!-- Target Frame -->
	<Frame name="TRP3_TargetFrame" toplevel="true" parent="UIParent" enableMouse="true" hidden="true" movable="true" inherits="TRP3_FieldSetFrame">
		<TitleRegion setAllPoints="true" />
		<Size x="200" y="50" />
		<Anchors>
			<Anchor point="CENTER" x="0" y="0" />
		</Anchors>
		<Scripts>
			<OnLoad>
				self:SetClampedToScreen(true);
			</OnLoad>
		</Scripts>
	</Frame>

	<Script file="target_frame.lua"/>

</Ui>