		</Frames>
	</Frame>
	
		<Button name="TRP3_MinimapButton" parent="Minimap" frameStrata="MEDIUM" toplevel="true" enableMouse="true" movable="true" hidden="false">
		<Size>
			<AbsDimension x="33" y="33"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="TRP3_MinimapButton_Icon" file="Interface\AddOns\totalRP3\resources\trp3minimap.blp">
					<Size>
						<AbsDimension x="21" y="21"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="7" y="-6"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture file="Interface\Minimap\MiniMap-TrackingBorder">
					<Size>
						<AbsDimension x="56" y="56"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="TRP3_MinimapButton_DraggingFrame" hidden="true">
				<Scripts>
					<OnUpdate>
						TRP3_MinimapButton_DraggingFrame_OnUpdate()
					</OnUpdate>
				</Scripts>
			</Frame>
		</Frames>
		<HighlightTexture alphaMode="ADD" file="Interface\Minimap\UI-Minimap-ZoomButton-Highlight"/>
		<Scripts>
			<OnLoad>
				self:RegisterForClicks("LeftButtonUp","RightButtonUp")
				self:RegisterForDrag("LeftButton","RightButton")
			</OnLoad>
			<OnDragStart>
				self:LockHighlight()
				TRP3_MinimapButton_DraggingFrame:Show()
			</OnDragStart>
			<OnDragStop>
				self:UnlockHighlight()
				TRP3_MinimapButton_DraggingFrame:Hide()
			</OnDragStop>
			<OnClick>
				if button == "RightButton" then
					TRP3_SwitchToolbar();
				else
						TRP3_NAVIGATION.switchMainFrame();
				end
			</OnClick>
			<OnEnter>
				-- TODO
				-- TRP3_RefreshTooltipForFrame(self);
			</OnEnter>
			<OnLeave>
				-- TODO
				-- TRP3_MainTooltip:Hide();
			</OnLeave>
		</Scripts>
	</Button>
	
	<ScrollFrame name="TRP3_DEBUG_CODE_FRAME" inherits="UIPanelScrollFrameTemplate" parent="UIParent" hidden="true">
		<Backdrop edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true" bgFile="Interface\DialogFrame\UI-DialogBox-Background">
			<EdgeSize><AbsValue val="32"/></EdgeSize><TileSize><AbsValue val="400"/></TileSize>
			<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
		</Backdrop>
		<Size x="200" y="200"/>
		<Anchors>
			<Anchor point="CENTER" x="0" y="0"/>
		</Anchors>
		<ScrollChild>
			<EditBox name="TRP3_DEBUG_CODE_FRAME_TEXT" multiLine="true" enableMouse="false" autoFocus="false">
				<Size x="200" y="200"/>
				<Scripts>
					<OnTextChanged>
						if self:IsVisible() and self:GetCursorPosition() == string.len(self:GetText()) then
							self:GetParent():SetVerticalScroll(self:GetParent():GetVerticalScrollRange());
						end
					</OnTextChanged>
					<OnEscapePressed>
						self:ClearFocus();
					</OnEscapePressed>
					<OnEditFocusGained>
						self:HighlightText();
					</OnEditFocusGained>
					<OnEditFocusLost>
						self:HighlightText(0,0);
					</OnEditFocusLost>
				</Scripts>
				<FontString inherits="GameFontNormalSmall"/>
			</EditBox>
		</ScrollChild>
	</ScrollFrame>
</Ui>