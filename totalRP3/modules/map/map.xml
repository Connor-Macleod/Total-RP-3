	<Frame name="TRP3_WorldMapUnit" virtual="true" alpha="0">
		<Size>
			<AbsDimension x="16" y="16"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="Icon" file="Interface\Minimap\PartyRaidBlips" setAllPoints="true" />
			</Layer>
		</Layers>
		<Animations>
			<AnimationGroup parentKey="Bounce" setToFinalAlpha="true">
				<Alpha toAlpha="1" fromAlpha="0" duration="0.2"/>
				<Scale scaleX="1.5" scaleY="1.5" duration="0.2"/>
				<Scale scaleX="0.5" scaleY="0.5" duration="0.2" startDelay="0.2"/>
			</AnimationGroup>
		</Animations>
	</Frame>

	<Frame name="TRP3_ScanLoaderFrame" parent="WorldMapButton" hidden="true">
		<Size x="200" y="200"/>
		<Anchors>
			<Anchor point="CENTER" x="0" y="0"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="ring" alphaMode="ADD" file="Interface\UNITPOWERBARALT\PandarenTrainingLarge_Circular_Fill" alpha="0.5">
					<Size x="256" y="256"/>
					<Anchors>
						<Anchor point="CENTER" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture alphaMode="ADD" file="Interface\UNITPOWERBARALT\PandarenTrainingLarge_Circular_Flash" alpha="0.5">
					<Size x="300" y="300"/>
					<Anchors>
						<Anchor point="CENTER" x="0" y="0"/>
					</Anchors>
				</Texture>
				<Texture parentKey="glow" alphaMode="ADD" file="Interface\UNITPOWERBARALT\PandarenTrainingLarge_Circular_Flash" alpha="0.5">
					<Size x="400" y="400"/>
					<Anchors>
						<Anchor point="CENTER" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture alphaMode="BLEND" file="Interface\Timer\Challenges-Logo">
					<Size x="130" y="130"/>
					<Anchors>
						<Anchor point="CENTER" x="0" y="0"/>
					</Anchors>
				</Texture>
				<Texture parentKey="secondGlow" alphaMode="BLEND" file="Interface\UNITPOWERBARALT\PandarenTrainingLarge_Circular_Frame">
					<Size x="256" y="256"/>
					<Anchors>
						<Anchor point="CENTER" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="Banner" atlas="GarrMission_RewardsBanner-Desaturate" useAtlasSize="true">
					<Anchors>
						<Anchor point="CENTER" relativePoint="TOP" x="0" y="10"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="TRP3_ScanLoaderFrameScanning" inherits="QuestFont_Huge" text="Scanning">
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Banner" x="0" y="6"/>
					</Anchors>
					<Color r="0" g="0" b="0" />
				</FontString>
			</Layer>
		</Layers>
		<Animations>
			<AnimationGroup parentKey="scanningAnimation" setToFinalAlpha="true">
				<!-- Frame itself -->
				<Alpha duration="1" toAlpha="0" fromAlpha="1"/>

				<!-- Ring -->
				<Rotation childKey="ring" degrees="-360"/>

				<!-- Glow -->
				<Rotation childKey="glow" degrees="-90"/>

				<!-- Second glow -->
				<Rotation childKey="secondGlow" degrees="-360"/>
			</AnimationGroup>

			<AnimationGroup parentKey="fadeOutAnimation" setToFinalAlpha="true">
				<Alpha duration="0.5" fromAlpha="0" toAlpha="1"/>
				<Scale childKey="glow" duration="1" scaleX="2.5" scaleY="2.5"/>
			</AnimationGroup>
		</Animations>
	</Frame>

	<Script file="map_markers.lua"/>
</Ui>