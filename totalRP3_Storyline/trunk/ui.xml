	<Button name="TRP3_StorylineChoiceButton" virtual="true" hidden="false">
		<Size x="0" y="16"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentGossipIcon" file="Interface\QuestFrame\UI-Quest-BulletPoint">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="3" y="1"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter>
				TRP3_RefreshTooltipForFrame(self);
			</OnEnter>
			<OnLeave>
				TRP3_MainTooltip:Hide();
			</OnLeave>
			<PostClick>
				TRP3_API.ui.misc.playUISound("gsCharacterSelection");
			</PostClick>
		</Scripts>
		<HighlightTexture file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD"/>
		<ButtonText>
			<Anchors>
				<Anchor point="LEFT" x="25" y="0"/>
				<Anchor point="RIGHT" x="-20" y="0"/>
			</Anchors>
		</ButtonText>
		<NormalFont style="QuestFontLeft"/>
	</Button>

