<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\..\UI.xsd">
	
	<!-- Color browser  -->
    <Frame name="TRP3_ColorBrowser" parent="TRP3_PopupsFrame" hidden="true">
		<Backdrop bgFile="Interface\AchievementFrame\UI-Achievement-StatsBackground" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
			<EdgeSize><AbsValue val="32"/></EdgeSize><TileSize><AbsValue val="415"/></TileSize>
			<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
		</Backdrop>
		<Size x="420" y="300"/>
		<Anchors>
			<Anchor point="CENTER" x="0" y="0"/>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="TRP3_ColorBrowserTitle" text="[placeholder]" inherits="GameFontNormalLarge">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="-17"/>
						<Anchor point="TOPRIGHT" x="0" y="-17"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-5" y="-5"/>
				</Anchors>
				<Scripts>
					<OnClick>
						TRP3_API.popup.hidePopups();
					</OnClick>
				</Scripts>
			</Button>
			<Frame>
				<Size x="0" y="60"/>
				<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
					<EdgeSize><AbsValue val="32"/></EdgeSize><TileSize><AbsValue val="415"/></TileSize>
					<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
				</Backdrop>
				<Anchors>
					<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="TRP3_ColorBrowserTitle" x="0" y="-10"/>
					<Anchor point="BOTTOMLEFT" x="10" y="10"/>
					<Anchor point="BOTTOMRIGHT" x="-10" y="10"/>
				</Anchors>
				<Frames>
					<Slider name="TRP3_ColorBrowserRed" inherits="OptionsSliderTemplate">
						<Size x="200" y="15"/>
						<Anchors>
							<Anchor point="TOP" x="0" y="-25"/>
							<Anchor point="LEFT" x="25" y="0"/>
							<Anchor point="RIGHT" x="-25" y="0"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								self:SetMinMaxValues(0, 255);
								self:SetValueStep(1);
							</OnLoad>
						</Scripts>
					</Slider>
					<Slider name="TRP3_ColorBrowserGreen" inherits="OptionsSliderTemplate">
						<Size x="200" y="15"/>
						<Anchors>
							<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="TRP3_ColorBrowserRed" x="0" y="-25"/>
							<Anchor point="LEFT" x="25" y="0"/>
							<Anchor point="RIGHT" x="-25" y="0"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								self:SetMinMaxValues(0, 255);
								self:SetValueStep(1);
							</OnLoad>
						</Scripts>
					</Slider>
					<Slider name="TRP3_ColorBrowserBlue" inherits="OptionsSliderTemplate">
						<Size x="200" y="15"/>
						<Anchors>
							<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="TRP3_ColorBrowserGreen" x="0" y="-25"/>
							<Anchor point="LEFT" x="25" y="0"/>
							<Anchor point="RIGHT" x="-25" y="0"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								self:SetMinMaxValues(0, 255);
								self:SetValueStep(1);
							</OnLoad>
						</Scripts>
					</Slider>
					<Button name="TRP3_ColorBrowserSelect" inherits="TRP3_CommonButton" text="[SELECT]">
						<Size x="120" y="20"/>
						<Anchors>	
							<Anchor point="BOTTOM" x="0" y="15"/>
						</Anchors>
					</Button>
				</Frames>
				<Layers>
					<Layer level="ARTWORK">
						<Texture name="TRP3_ColorBrowserView">
							<Size x="200" y="25"/>
							<Anchors>
								<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="TRP3_ColorBrowserBlue" x="0" y="-25"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<FontString name="TRP3_ColorBrowserViewText" text="[placeholder]" inherits="GameFontNormalLarge">
							<Size x="0" y="10"/>
							<Anchors>
								<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="TRP3_ColorBrowserView" x="0" y="-15"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
	</Frame>
	
</Ui>