<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\..\UI.xsd">
	
	<Script file="impl\register_main.lua"/>
	<Script file="impl\register_characteristics.lua"/>
	<Include file="ui\register_ui_characteristics.xml"/>
	<Script file="impl\register_about.lua"/>
	<Include file="ui\register_ui_about.xml"/>
	<Script file="impl\register_style.lua"/>
	<Include file="ui\register_ui_style.xml"/>
	<Script file="impl\register_current.lua"/>
	<Include file="ui\register_ui_current.xml"/>
	<Script file="impl\register_exchange.lua"/>
	<Script file="impl\register_tooltip.lua"/>
    <Include file="ui\register_ui_main.xml"/>
    
    <!-- Character tooltip -->
	<GameTooltip name="TRP3_CharacterTooltip" frameStrata="TOOLTIP" parent="UIParent" inherits="GameTooltipTemplate">
		<Scripts>
			<OnUpdate>
				if self.target and self.targetType and not self.isFading then
					if self.target ~= UnitName(self.targetType) then
						self.isFading = true;
						self.target = nil;
						self:FadeOut();
					end
				end
			</OnUpdate>
			<OnHide>
				self.isFading = nil;
			</OnHide>
		</Scripts>
	</GameTooltip>
</Ui>