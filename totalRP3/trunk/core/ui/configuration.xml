<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\UI.xsd">
	
	<!-- 
		GENERAL SETTINGS
	 -->
	
    <Frame name="TRP3_ConfigurationGeneral" parent="TRP3_MainFramePageContainer" hidden="true">
        <Backdrop edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
			<EdgeSize><AbsValue val="32"/></EdgeSize><TileSize><AbsValue val="418"/></TileSize>
			<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
		</Backdrop>
		<Size x="530" y="0"/>
        <Anchors>
			<Anchor point="TOPRIGHT" x="0" y="0"/>
			<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
		</Anchors>
        <Layers>
        	<Layer level="BACKGROUND">
				<Texture file="Interface\AchievementFrame\UI-Achievement-StatsBackground">
					<Size x="526" y="0"/>
					<Anchors>
						<Anchor point="TOPRIGHT" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
					<TexCoords left="0.07" right="1" top="0" bottom="0.98"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
			    <FontString name="TRP3_ConfigurationGeneralTitle" inherits="GameFontNormalHuge" justifyH="CENTER" text="[general_settings]">
					<Anchors>
						<Anchor point="TOPLEFT" x="50" y="-25"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
		    <Frame>
		        <Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
					<EdgeSize><AbsValue val="32"/></EdgeSize><TileSize><AbsValue val="418"/></TileSize>
					<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
				</Backdrop>
				<Size x="450" y="380"/>
		         <Anchors>
					<Anchor point="BOTTOM" x="0" y="20"/>
				</Anchors>
				<Frames>
				    <ScrollFrame name="TRP3_ConfigurationGeneralScroll" inherits="UIPanelScrollFrameTemplate">
						<Size x="420" y="365"/>
						<Anchors>
							<Anchor point="RIGHT" x="-17" y="0"/>
						</Anchors>
						<ScrollChild>
							<Frame>
								<Size x="50" y="50"/>
								<Layers>
								    <Layer level="OVERLAY">
									    <FontString name="TRP3_ConfigurationGeneral_LangText" inherits="GameFontNormal" justifyH="LEFT" text="[locale_text]">
									        <Size x="130" y="0"/>
											<Anchors>
												<Anchor point="TOPLEFT" x="25" y="-10"/>
											</Anchors>
											<Color r="0.95" g="0.95" b="0.95"/>
										</FontString>
									</Layer>
								</Layers>
								<Frames>
								    <Frame name="TRP3_ConfigurationGeneral_LangWidget" inherits="UIDropDownMenuTemplate" enableMouse="true">
								        <Anchors>
											<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="TRP3_ConfigurationGeneral_LangText" x="0" y="-2"/>
										</Anchors>
								    </Frame>
								</Frames>
							</Frame>
						</ScrollChild>
					</ScrollFrame>
				</Frames>
		    </Frame>
		</Frames>
    </Frame>
    
    <!-- 
		MODULES SETTINGS
	 -->
	 
	 <Frame name="TRP3_ConfigurationModuleFrame" virtual="true">
		<Backdrop edgeFile="Interface\GLUES\COMMON\TextPanel-Border" bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="true">
			<EdgeSize><AbsValue val="32"/></EdgeSize><TileSize><AbsValue val="200"/></TileSize>
			<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
		</Backdrop>
		<Size x="420" y="60"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentModuleName" text="[name]" inherits="GameFontNormal" justifyH="LEFT">
					<Anchors>
						<Anchor point="TOPLEFT" x="15" y="-8"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
				<FontString name="$parentModuleVersion" text="[version]" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Size x="200" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parentModuleName" x="5" y="-5"/>
					</Anchors>
					<Color r="0.95" g="0.75" b="0.1"/>
				</FontString>
				<FontString name="$parentModuleID" text="[id]" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parentModuleVersion" x="0" y="-3"/>
					</Anchors>
					<Color r="0.95" g="0.75" b="0.1"/>
				</FontString>
				<FontString name="$parentStatus" text="[status]" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentModuleVersion" x="0" y="-3"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentInfo" inherits="TRP3_HelpButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-10" y="-7"/>
				</Anchors>
			</Button>
		</Frames>
	</Frame>
    
    <Frame name="TRP3_ConfigurationModule" parent="TRP3_MainFramePageContainer" hidden="true">
        <Backdrop edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
